    "itemSize": 45, // Size of items within the bar (default: size)
    "itemMargin": 5 // Margin between two items (default: 3)
  },
  "apc.sidebar.titlebar": {
    "height": 40,
    "fontSize": 13
  },
  "window.titleBarStyle": "native",
  "window.commandCenter": false,
  "workbench.statusBar.visible": false,
